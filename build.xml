<?xml version="1.0"?>
<project name="jchess" default="dist">
  <description>A java, cli based, chess game.</description>

  <property name="srcDir" location="src" />
  <property name="buildDir" location="build" />
  <property name="distDir" location="dist" />

  <target name="clean">
    <delete dir="${buildDir}" />
    <delete dir="${distDir}" />
  </target>

  <target name="init" depends="clean">
    <tstamp />
    <mkdir dir="${buildDir}" />
    <mkdir dir="${distDir}" />
  </target>

  <target name="compile" depends="init">
    <javac srcdir="${srcDir}" destdir="${buildDir}" />
  </target>

  <target name="dist" depends="compile">
    <jar destfile="${distDir}/com.chess-${DSTAMP}.jar" basedir="${buildDir}" includes="**/*.class">
      <manifest>
        <attribute name="Built-By" value="${user.name}"/>
        <attribute name="Main-Class" value="com.chess.JChess"/>
      </manifest>
    </jar>
    <!--jar destfile="${distDir}/package-src-${DSTAMP}.jar" basedir="${srcDir}" includes="**/*.class" /-->
  </target>
</project>
